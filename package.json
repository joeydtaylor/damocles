{
  "name": "aegis-auth",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.5.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./src/app.ts --ignore '*.json'",
    "start": "tsc -p . && cross-env NODE_ENV=production node ./dist/app.js",
    "build": "tsc -p .",
    "prisma:generate": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://auth_user:supersecret@db:5432/auth_db?schema=public} prisma generate --schema=prisma/schema.prisma",
    "prisma:push": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://auth_user:supersecret@db:5432/auth_db?schema=public} prisma db push --schema=prisma/schema.prisma",
    "prisma:studio": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://auth_user:supersecret@db:5432/auth_db?schema=public} prisma studio --schema=prisma/schema.prisma",
    "prisma:seed:tenant": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://auth_user:supersecret@db:5432/auth_db?schema=public} ts-node scripts/add-local-tenant.ts",
    "prisma:init:local": "yarn prisma:reset:local",
    "prisma:reset:local": "cross-env DATABASE_URL=${DATABASE_URL:-postgresql://auth_user:supersecret@db:5432/auth_db?schema=public} prisma db push --force-reset --schema=prisma/schema.prisma && yarn prisma:generate && yarn prisma:seed:tenant",
    "oauth:generate:keys": "ts-node scripts/generate-oauth-keys.ts"
  },
  "dependencies": {
    "@prisma/client": "6.13.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.1",
    "cookie-parser": "~1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "morgan": "~1.10.0",
    "passport": "^0.7.0",
    "passport-saml": "^3.2.4",
    "passport-saml-metadata": "^3.1.0",
    "prisma": "^6.13.0",
    "prom-client": "^13.2.0",
    "prometheus-gc-stats": "^0.6.3",
    "reflect-metadata": "^0.2.1",
    "rotating-file-stream": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-prometheus-middleware": "^1.2.3",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.26",
    "@types/passport": "^1.0.16",
    "@types/passport-saml": "^1.1.7",
    "@types/passport-saml-metadata": "^2.2.4",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
